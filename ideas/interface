interface Card with
- struct {
    returnAddress: String
}

interface Invitation with
- struct {
    date: String,
    location: String,
    numGuests: Int,
    accepted: Bool
}

- signatures {
    method send(recipient: Person),
    method accept(guests: Int)
}

type WeddingInvitation with
- struct {
    bride: String,
    groom: String,
    struct from Invitation,
    struct from Card
}

- implement Invitation {
    method send(recipient: Person) {
        recipient.receive(copy self);
    }

    method accept(guests: Int) {
        self.accepted = True;
    }
}
function test1() {
    const age: Int = 20
    print age
    //age can't be changed here!
}

function test2() {
    var age: Int = 20
    print age
    set age = 21
    print age
    set age = age + 1
    print age
    set age += 1    //same as: set age = age + 1
    print age
}

function test3() {
    const base = 5 //the type Int is implied here
    const height = 8
    const area: Float = (1/2) * base * height
    print area, " inches"
}

function test4() {
    var name: String = "Rick Astley"
    set name = "Rickroll"   //strings are mutable
    print name
}